<?xml version="1.0" encoding="utf-8" ?>
<hibernate-mapping xmlns="urn:nhibernate-mapping-2.2" assembly="Transport" namespace="Transport.OtherModels.farm" default-lazy="false">

  <class name="Refuelling">

    <id name="RefuellingId">
      <generator class="native"/>
    </id>

     <discriminator column="DSK" type="string" length="6"/>
    
    <property name="RefuellingDate"/>
    <property name="FuelId"/>
    <property name="Quantity"/>

      <subclass name="WaybillRefuelling" discriminator-value="waybil">
          <property name="WaybillId"/>
          <property name="DriverId"/>
          <property name="RefuellingPlaceId"/>
      </subclass>

    <subclass name ="OtherRefuelling" discriminator-value="other">
      <property name ="PeopleId"/>
    </subclass>
    
  </class>

</hibernate-mapping>